@{

}

<div class ="container">
    <h1>Cuentas</h1>
    <br />
    <a class="btn" href="/cuenta/create">Crear Cuenta</a>
    <table class="table">
        <thead>
            <tr>
                <th>Cuenta</th>
                <th>Categoria</th>
                <th>Saldo</th>
                <th>Moneda</th>
            </tr>
        </thead> 
        <tbody>
            @foreach(var item in ViewBag.cuentas)
            {
                <tr>
                    <td>@item.nombre</td>    
                    <td>@item.categoria</td>  
                    <td>@item.saldoInicial</td>    
                    <td>@item.moneda</td>
                </tr>
            }
        </tbody>

    </table>
    
</div>