
@{
}

﻿<div class="row">
    <div class="col-12">
        <form action="/cuenta/create" method="post">
            <div class="form-group">
                <label>Nombre</label>
                <input type="text" name="nombre" class="form-control" autocomplete="off" />
                @Html.ValidationMessage("nombre")
            </div>
            <div class="form-group">
                <label>Categoria</label>
                <input type="text" name="categoria" class="form-control" autocomplete="off" />
                @Html.ValidationMessage("categoria")
            </div>
            <div class="form-group">
                <label>Saldo</label>
                <input type="text" name="saldoInicial" class="form-control" autocomplete="off" />
                @Html.ValidationMessage("saldo")
            </div>
            <div class="form-group">
                <label>Moneda</label>
                
                <input type="text" name="moneda" class="form-control" autocomplete="off" />
                @Html.ValidationMessage("moneda")
            </div>
            <button type="submit" class="btn btn-primary">Guardar</button>
        </form>
    </div>
</div>